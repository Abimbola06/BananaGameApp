<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.geometry.Pos?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="GameUIController">

    <top>
        <Label fx:id="welcomeLabel"
               text="Welcome!"
               BorderPane.alignment="CENTER"
               style="-fx-font-size: 16; -fx-padding: 10;" />
    </top>

    <center>
        <VBox spacing="10" alignment="CENTER">
            <Label text="Click the button to fetch a Banana quiz question (JSON):" />
            <Button text="Fetch Question" onAction="#onFetchQuestion" />
            <TextArea fx:id="resultArea" prefRowCount="10" wrapText="true" />
        </VBox>
    </center>

    <padding>
        <Insets top="10" right="10" bottom="10" left="10" />
    </padding>
</BorderPane>
